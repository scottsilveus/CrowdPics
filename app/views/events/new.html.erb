<h1>new event</h1>

<%= form_for @event, url: events_path do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title, autofocus: true %>
	</div>
	<div>
		<%= f.label :description%>:<br>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :start_date %>
		<%= f.text_field :start_date %>
		<%= f.label :end_date %>
		<%= f.text_field :end_date %>
	</div>
	<div>
		<%= f.submit "Create" %>
	</div>
<% end %>