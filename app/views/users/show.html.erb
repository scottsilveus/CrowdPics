<h1>Show page</h1>

<ol>
<% current_user.events.order(:start_date).each do |event| %>
	<li><%= link_to "#{event.title}", event_path(event.id) %> Date: <%= event.start_date.strftime("%m/%d/%y") %><%= link_to "Edit Event", edit_user_event_path(current_user.id,event.id) %></li>
<% end %>
</ol>
<%= link_to "All Events", events_path%>
<%= link_to "Create Event", new_user_event_path(current_user) %>
<%= link_to "LogOut", destroy_user_session_path, method: :delete %>
<%= link_to "Delete", user_path, method: :delete, data: {confirm: "Are you sure?"} %>
